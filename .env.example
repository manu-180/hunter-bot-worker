# ============================================
# LeadSniper Backend Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-key-here

# ============================================
# RESEND CONFIGURATION
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email sender configuration
# IMPORTANT: The domain must be verified in Resend
FROM_EMAIL=leads@yourdomain.com
FROM_NAME=LeadSniper

# ============================================
# EMAIL TEMPLATE CONFIGURATION
# ============================================
# Optional: Path to custom HTML template
# If not set, uses the default built-in template
# EMAIL_TEMPLATE_PATH=templates/email.html

# Optional: Custom email subject
# Supports placeholders: {{company_name}}, {{domain}}
# EMAIL_SUBJECT=Propuesta para {{company_name}}

# Sender name for email signature
SENDER_NAME=Tu Nombre

# Calendar link for booking demos
CALENDAR_LINK=https://calendly.com/your-username

# ============================================
# WORKER CONFIGURATION (Optional)
# ============================================
# These have sensible defaults in code, but can be overridden

# Number of domains to scrape per batch
# SCRAPE_BATCH_SIZE=5

# Number of emails to send per batch
# EMAIL_BATCH_SIZE=3

# Seconds to wait when no work is available
# IDLE_SLEEP_SECONDS=10

# Minimum seconds between email sends
# MIN_EMAIL_DELAY=10

# Maximum seconds between email sends
# MAX_EMAIL_DELAY=30

# ============================================
# DEBUG CONFIGURATION
# ============================================
# Enable debug mode to save HTML files for inspection
# When enabled, creates a 'debug_html' folder with captured HTML
DEBUG_MODE=false
